# Application Environment
APP_ENV=development
LOG_LEVEL=debug

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rexi_erp
DB_USER=rexi
DB_PASSWORD=password
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development-only-change-in-production
JWT_EXPIRATION_HOURS=24

# Indonesian Government APIs
EFAKTUR_API_URL=https://api.efaktur.pajak.go.id
BPJS_API_URL=https://api.bpjs-kesehatan.go.id
EINVOICE_API_URL=https://api.einvoice.pajak.go.id

# Notification Services
SMS_GATEWAY_URL=https://api.sms-gateway.com
SMS_GATEWAY_API_KEY=your-sms-gateway-api-key
EMAIL_GATEWAY_URL=https://api.email-gateway.com
EMAIL_GATEWAY_API_KEY=your-email-gateway-api-key

# Service Ports
API_GATEWAY_HTTP_PORT=8080
API_GATEWAY_HTTPS_PORT=8443
AUTH_SERVICE_PORT=8001
INVENTORY_SERVICE_PORT=8002
ACCOUNTING_SERVICE_PORT=8003
HR_SERVICE_PORT=8004
CRM_SERVICE_PORT=8005
NOTIFICATION_SERVICE_PORT=8006
INTEGRATION_SERVICE_PORT=8007

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# External Service Ports
POSTGRES_PORT=5432
REDIS_PORT=6379
RABBITMQ_MGMT_PORT=15672

# Timezone (Indonesian Business Hours)
TZ=Asia/Jakarta

# Development Settings
DEBUG=true
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Security (for development - change in production)
ALLOW_INSECURE_COOKIES=true
SESSION_SECRET=your-session-secret-for-development-only

# Email Configuration (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@rexi-erp.local

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=20MB

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Database Pooling
DB_MAX_OPEN_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_MAX_LIFETIME=300s

# Cache Settings
CACHE_TTL_SECONDS=3600
CACHE_CLEANUP_INTERVAL=600s

# Message Queue Settings
MESSAGE_QUEUE_RETRY_ATTEMPTS=3
MESSAGE_QUEUE_RETRY_DELAY=5s

# Health Check Settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# Metrics
ENABLE_METRICS=true
METRICS_PATH=/metrics

# Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs

# Feature Flags
FEATURE_TENANCY_ENABLED=true
FEATURE_AUDIT_LOG_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_INTEGRATIONS_ENABLED=true